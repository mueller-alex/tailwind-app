import mePfp from "../images/uconnpfp.jpg";
import lollydrop from "../images/lollydrop.svg";
import tasker from "../images/tasker.svg";
import contacts from "../images/contacts.svg";
import chrome from "../images/chrome.svg";
import Link from "../components/Link.astro";
import moonsound from "../images/moonsound1.png";
import grid from "../images/grid.png";
import sourcery from "../images/sourcery.png";
import DarkModeToggle from "../components/DarkModeToggle.astro";
---

<Layout title="Alex Mueller, TailwindCSS Design Engineer">
	<div
		class="pointer-events-none fixed left-0 right-0 top-0 z-40 mx-auto h-screen w-screen max-w-2xl border-l-2 border-r-2 border-dotted border-gray-300 max-sm:hidden dark:border-gray-700"
	>
	</div>
	<nav
		class="sticky top-0 z-30 border-b-2 border-dotted border-gray-300 bg-inherit shadow shadow-gray-200 dark:border-gray-700 dark:shadow-gray-800"
	>
		<ul class="mx-auto flex max-w-2xl items-center gap-1 p-4 px-6 text-2xl">
			<li
				class="font-extended mr-auto text-base font-bold uppercase tracking-wider"
			>
				<a href="https://muellr.xyz">muellr â†—</a>
			</li>
			<li>
				<a
					class="block w-fit rounded-full border-2 border-dotted border-transparent p-2 transition-colors active:bg-gray-900/20 hocus:border-gray-900/20 hocus:bg-gray-900/5 dark:active:bg-gray-100/20 dark:hocus:border-gray-50/10 dark:hocus:bg-gray-100/10"
					href="https://www.behance.net/muelleralex"
					title="Behance"
					aria-label="Behance"
				>
					<Icon name="mingcute:behance-line" />
				</a>
			</li>
			<li>
				<a
					class="block w-fit rounded-full border-2 border-dotted border-transparent p-2 transition-colors active:bg-gray-900/20 hocus:border-gray-900/20 hocus:bg-gray-900/5 dark:active:bg-gray-100/20 dark:hocus:border-gray-50/10 dark:hocus:bg-gray-100/10"
