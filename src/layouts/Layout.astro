---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "../styles/inter.css";
import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en" class="scroll-pt-40">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="preload"
			href="/fonts/Hubot-Sans.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<title>{title}</title>
	</head>
	<body
		class="relative bg-gray-200 text-gray-800 dark:bg-gray-800 dark:text-gray-50"
	>
		<slot />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}
	@font-face {
		font-family: "Hubot Sans";
		src:
			url("/fonts/Hubot-Sans.woff2") format("woff2 supports variations"),
			url("/fonts/Hubot-Sans.woff2") format("woff2-variations");
		font-weight: 200 900;
		font-stretch: 75% 125%;
	}
	.text-pretty {
		text-wrap: balance;
		text-wrap: pretty;
	}
	::selection {
		@apply bg-gray-800 text-white dark:bg-white dark:text-gray-800;
	}
	.font-extended {
		font-variation-settings: "wdth" 125;
		@apply font-hubot;
	}
	.font-condensed {
		font-variation-settings: "wdth" 75;
		@apply font-hubot;
	}
	.card {
		/* @apply rounded-3xl border-t border-white bg-gray-100 p-4 shadow-nice shadow-gray-900/10 dark:border-gray-600 dark:bg-gray-700 dark:shadow-none; */
		@apply rounded-3xl border-2 border-dotted border-gray-300 bg-gray-100 p-4  dark:border-gray-600 dark:bg-gray-700;
	}
</style>
